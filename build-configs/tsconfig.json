{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "composite": true,
    "outDir": "./dist",
    "types": ["node"]
  },
  "include": [
    "*.ts",
    "*.js"
  ]
} 